<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/clock_md"
            android:foregroundGravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="@string/label_splash"
            android:gravity="center"
            android:textColor="@color/textColor"/>

        <Space
            android:layout_width="1dp"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/label_user"/>

        <EditText
            android:id="@+id/edtUser"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:theme="@style/EditTextViewFocus"/>

        <TextView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/label_passwd"/>

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:inputType="textPassword"
            android:singleLine="true"
            android:theme="@style/EditTextViewFocus"
            />

        <Space
            android:layout_width="1dp"
            android:layout_height="30dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:background="@drawable/btn_rounded"
            android:text="@string/btn_login"
            android:textColor="@color/buttonTextColor"
            android:onClick="login"
            />

        <Space
            android:layout_width="1dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/txtForgotPassword"
            android:layout_width="200dp"
            android:layout_height="18dp"
            android:text="@string/label_forgot_passwd"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:clickable="true"
            android:onClick="recoverPasswd"
            android:focusable="true" />



    </LinearLayout>
</android.support.constraint.ConstraintLayout>